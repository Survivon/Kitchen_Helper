@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/mainlayout.cshtml";
}
<h1>Kitchen Helper</h1>
<div class="blok">
    <h2>Registration</h2>
    <form action="/Registration/Registration" method="post">
        <table>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    <input name="name" type="text" class="style-4"/>
                </td>
            </tr>
            <tr>
                <td>
                    Surname
                </td>
                <td>
                    <input name="surname" type="text" class="style-4" />
                </td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input name="email" type="email" class="style-4" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input name="password" type="password" class="style-4" /></td>
            </tr>
        </table>
        <input type="submit" value="Registration" class="btn btn-4 btn-4a icon-arrow-right" />
    </form>
</div>