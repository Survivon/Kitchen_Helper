<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    @Styles.Render("~/Content/layout.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <table>
        <tr>
            <td>
                <table class="fixed">
                    <tr>
                        <td width="70%">
                            <h1>Kitchen Helper</h1>
                        </td>
                        <td width="10%">
                            <form action="/Main/MainLoad" method="post">
                                <input type="hidden" name="id" value="@Convert.ToInt32(Session["id"])" />
                                <input type="submit" value="Main page" class="button9" />
                            </form>
                        </td>
                        <td width="10%">
                            <form action="" method="post">
                                <input type="submit" value="Buy List" class="button9" />
                            </form>
                        </td>
                        <td width="10%">
                            <form action="/Recipe/AllRecipe" method="post">
                                <input type="submit" value="Recipe" class="button9" />
                            </form>
                        </td>                        
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                @RenderBody()
            </td>            
        </tr>
    </table>   

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
