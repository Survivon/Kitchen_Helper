@{
    ViewBag.Title = "NewRecipe";
    
}
@model KH.Models.Product

<h1>New Recipe</h1>
<form action="/Recipe/NewRecipe">
    <h2>Name:</h2>
    <input type="text" name="name" />
    <h2>Description:</h2>
    <textarea name="description" cols="40" rows="5"></textarea>
    <table>
        <tr>
            <td>@Html.EditorFor(Model => Model.name)</td>
            <td>@Html.EditorFor(Model=>Model.count)</td>
            <td>@Html.EditorFor(Model=>Model.countname)</td>
        </tr>
    </table>
   

</form>