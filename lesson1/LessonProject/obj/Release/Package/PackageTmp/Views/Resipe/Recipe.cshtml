@{
    ViewBag.Title = "Recipe";    
}
<link rel="stylesheet" href="~/Content/animated-menu.css" media="screen" type="text/css" /> 
<script src="~/Scripts/animated-menu.js" type="text/javascript"></script>
<h2>Recipe</h2>
@for (int i = 0; i < ViewBag.recipename.Count; i++)
{
    <table>
    <tr>
        <td>
            <form action="/Recipe/Info" method="post">
                <input type="hidden" name="idrecipe" value="@ViewBag.recipeid[i]"/>
                <input type="submit" value="@ViewBag.recipename[i]" class="link">
            </form>
            
            </td>
        <td>
            <form action="/Menu/AddNewRecipe" method="post">
                <select name="idmenu" class="makeMeFancy">
                    @for (int j = 0; j < ViewBag.menusid.Count; j++)
                    {
                        <option value="@ViewBag.menusid[j]">@ViewBag.namemenu[j]</option>
                    }
                </select>
                <input type="hidden" name="idrecipe" value="@ViewBag.recipeid[i]" />
                <input type="submit" class="btn btn-7 btn-7g btn-icon-only icon-plus" value="Add" />
            </form>
            
               
</td>
        </tr>
    </table>
}