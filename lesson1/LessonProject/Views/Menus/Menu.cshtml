@{
    ViewBag.Title = "Menu - " + ViewBag.namemenu;
}

<h1>@ViewBag.namemenu</h1>
<div class="blok">
    <table>
        @for (int i = 0; i < ViewBag.namerecipe.Count; i++)
        {

            <tr>
                <td>
                    <form action="/Recipe/Info" method="post">
                        <input type="hidden" name="idrecipe" value="@ViewBag.recipeid[i]" />
                        <input type="submit" value="@ViewBag.namerecipe[i]" class="link">
                    </form>
                </td>
                <td>

                    <form action="/Menu/DelRecipefromMenu" method="post">
                        <input type="hidden" name="idmenu" value="@ViewBag.thismenuid" />
                        <input type="hidden" name="idrecipe" value="@ViewBag.recipeid[i]" />
                        <input type="submit" value="Delete" />
                    </form>

                </td>
            </tr>

        }
    </table>
    <form action="/Recipe/AllRecipe" method="post">
        <input type="submit" value="Add recipe" class="button9" />
    </form>
</div>